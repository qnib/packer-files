#
# slurm.conf file generated by configurator.html.
#
# See the slurm.conf man page for more information.
#
ClusterName=aws
ControlMachine={{getenv "CONTROL_MACHINE"}}
DebugFlags=NO_CONF_HASH

SlurmUser=slurm
SlurmctldPort=6817
SlurmdPort=6818
AuthType=auth/munge
StateSaveLocation=/tmp
SwitchType=switch/none
MpiDefault=none

SlurmctldPidFile=/var/run/slurm-llnl/slurmctld.pid
SlurmdPidFile=/var/run/slurm-llnl/slurmd.pid

ProctrackType=proctrack/pgid
CacheGroups=0
ReturnToService=0

# TIMERS
SlurmctldTimeout=300
SlurmdTimeout=300
InactiveLimit=0
MinJobAge=300
KillWait=30
Waittime=0

SchedulerType=sched/backfill
SelectType=select/linear
FastSchedule=0

# COMPUTE NODES
NodeName={{getenv "CONTROL_MACHINE"}} NodeAddr={{getenv "CONTROL_MACHINE_ADDR"}}

# Create list
PartitionName=all Nodes=ALL Default=YES MaxTime=INFINITE State=UP
#PartitionName=gpu Nodes=ALL Default=YES MaxTime=INFINITE State=UP
