{
  "variables": {
        "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
        "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
        "region":         "us-east-1",
        "source_ami":     "ami-69c75613",
        "ami_name":       "aws-docker-slurm"
  },
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/mkdirs.sh"
    },{
       "type": "file",
       "source": "files/confd/conf.d/slurm.toml",
       "destination": "/home/ubuntu/confd/conf.d/slurm.toml"
    },{
       "type": "file",
       "source": "files/write-slurm-conf.sh",
       "destination": "/home/ubuntu/write-slurm-conf.sh"
    },{
       "type": "file",
       "source": "files/munge.key",
       "destination": "/home/ubuntu/munge.key"
    },{
       "type": "file",
       "source": "files/slurm/job-gpu.sh",
       "destination": "/home/ubuntu/job-gpu.sh"
    },{
       "type": "file",
       "source": "files/systemd/slurmconfig.service",
       "destination": "/home/ubuntu/systemd/slurmconfig.service"
    },{
       "type": "file",
       "source": "files/confd/templates/slurm.conf.tmpl",
       "destination": "/home/ubuntu/confd/templates/slurm.conf.tmpl"
    },{
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/confd.sh"
    },{
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/slurm.sh"
    }
  ],
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "{{user `region`}}",
    "source_ami": "{{user `source_ami`}}",
    "instance_type": "t2.micro",
    "ssh_username": "ubuntu",
    "ami_name": "{{user `ami_name`}} {{timestamp}}"
  }]
}
